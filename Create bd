1. Создаем базу данных (если еще не создана)
CREATE DATABASE IF NOT EXISTS my_database;

2. Выбираем базу данных
USE my_database;

3. Создаем таблицу users
CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100) UNIQUE NOT NULL
);

4. Создаем таблицу posts
CREATE TABLE posts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(200) NOT NULL,
    content TEXT NOT NULL,
    user_id INT NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (user_id) REFERENCES users(id)
);

-- 5. Добавляем пользователей
INSERT INTO users (name, email) VALUES
('John', 'john.doe@example.com'),
('Alice', 'alice.smith@example.com'),
('John', 'john.snow@example.com');

6. Добавляем посты (после того как пользователи созданы)
INSERT INTO posts (title, content, user_id) VALUES
('My First Post', 'This is the content of my first post', 1),
('Hello World', 'Another post about programming', 2),
('SQL Tutorial', 'Learning SQL basics', 1);
